{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2017",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
